<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo blanco (círculo) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- Mitad superior roja -->
    <item android:top="0dp" android:bottom="50%">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" />
        </shape>
    </item>

    <!-- Línea negra horizontal en el medio -->
    <item android:top="49%" android:bottom="51%">
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
        </shape>
    </item>

    <!-- Círculo negro central (anillo exterior) -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="40dp"
                android:height="40dp" />
            <solid android:color="#000000" />
            <stroke
                android:width="2dp"
                android:color="#000000" />
        </shape>
        <gravity android:gravity="center" />
    </item>

    <!-- Círculo blanco interior -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="20dp"
                android:height="20dp" />
            <solid android:color="#FFFFFF" />
        </shape>
        <gravity android:gravity="center" />
    </item>

</layer-list>
